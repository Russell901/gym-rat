<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gym_rat.Components.AddGoalModal"
             Title="Add New Goal">
    <StackLayout Padding="20">
        <Entry Placeholder="Activity Name" Text="{Binding ActivityName}" />
        <Entry Placeholder="Calorie Target" Text="{Binding CalorieTarget}" Keyboard="Numeric" />
        <Editor Placeholder="Description" Text="{Binding Description}" HeightRequest="100" />
        <Button Text="Save Goal" Command="{Binding SaveGoalCommand}" Margin="0,20,0,0" />
        <Button Text="Cancel" Command="{Binding CancelCommand}" Margin="0,10,0,0" />
    </StackLayout>
</ContentPage>